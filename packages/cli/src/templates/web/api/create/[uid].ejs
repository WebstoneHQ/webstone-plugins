import type { RequestHandler } from '@sveltejs/kit';
import type { Locals } from '$lib/types';

// DELETE {{apiPath}}/:uid
export const del: RequestHandler<Locals> = async (request) => {
  return {
    status: 200,
    body: `${request.method.toUpperCase()} ${request.path} => Ok.`
  };
};

