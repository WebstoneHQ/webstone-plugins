{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES5",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"outDir": "./package/",
		"declaration": false,
		"rootDir": "./src/lib",
		"noImplicitAny": false
	},
	"include": ["./src/lib/cli/**/*.ts"]
}
