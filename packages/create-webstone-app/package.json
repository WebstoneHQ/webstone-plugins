{
  "name": "create-webstone-app",
  "version": "0.2.0",
  "description": "Start your next web application with Webstone and configure it as you go.",
  "author": "Mike Nikles, @mikenikles",
  "type": "module",
  "bin": "./bin.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -fr ./dist",
    "dev": "tsc --watch",
    "prepublishOnly": "pnpm build",
    "prepare": "pnpm build",
    "test": "pnpm test:unit",
    "test:unit": "c8 --all --include=src --reporter=html pnpm test:unit:only",
    "test:unit:only": "NODE_OPTIONS='--loader tsx' uvu tests"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "boilerplate",
    "starterkit",
    "web app",
    "graphql"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "12.12.6",
    "chalk": "^5.0.1",
    "create-svelte": "latest",
    "enquirer": "^2.3.6",
    "execa": "^6.0.0",
    "fs-extra": "^10.0.0",
    "listr2": "^4.0.5",
    "typescript": "^4.5.4"
  }
}
