{
  "name": "create-webstone-app",
  "version": "0.2.5",
  "description": "Start your next web application with Webstone and configure it as you go.",
  "author": "Mike Nikles, @mikenikles",
  "type": "module",
  "bin": "./bin.js",
  "types": "./dist/create-webstone.d.ts",
  "scripts": {
    "build:typescript": "tsc",
    "build": "pnpm clean && pnpm build:typescript && rollup --config",
    "clean": "rm -fr ./dist",
    "dev": "concurrently \"tsc --watch\" \"rollup --config --watch\"",
    "prepublishOnly": "pnpm build",
    "prepare": "pnpm build",
    "test": "pnpm test:unit",
    "test:unit": "c8 --all --include=src --reporter=html pnpm test:unit:only",
    "test:unit:only": "NODE_OPTIONS='--loader tsx' uvu tests"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "boilerplate",
    "starterkit",
    "web app",
    "graphql"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/node": "16.11.7",
    "concurrently": "^7.2.2",
    "rollup": "^2.77.0",
    "rollup-plugin-dts": "^4.2.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "chalk": "5.0.1",
    "create-svelte": "2.0.0-next.149",
    "enquirer": "2.3.6",
    "execa": "6.1.0",
    "fs-extra": "10.1.0",
    "listr2": "4.0.5"
  }
}
