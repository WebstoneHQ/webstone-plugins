{
	"name": "webstone-plugin-request-logger",
	"version": "0.0.1",
	"scripts": {
		"build": "npm run clean:build && npm run build:cli && npm run build:web",
		"build:web": "vite build && npm run package",
		"build:cli": "node scripts/build-cli.js build && npm run copy-templates",
		"clean:build": "rimraf ./dist",
		"copy-templates": "cp -a ./src/cli/templates ./dist/cli",
		"dev": "npm-run-all --parallel dev:cli dev:web",
		"dev:cli": "node scripts/build-cli.js dev",
		"dev:web": "vite dev",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package -o ./dist/web && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/web/index.d.ts",
			"svelte": "./dist/web/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.37.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.22.5",
		"@sveltejs/package": "^2.2.1",
		"@typescript-eslint/eslint-plugin": "^6.3.0",
		"@typescript-eslint/parser": "^6.3.0",
		"@webstone/gluegun": "^0.0.4",
		"eslint": "^8.46.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.32.4",
		"fs-jetpack": "^5.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.1",
		"prettier-plugin-svelte": "^3.0.3",
		"publint": "^0.2.0",
		"rimraf": "^3.0.2",
		"svelte": "^4.1.2",
		"svelte-check": "^3.4.6",
		"tslib": "^2.6.1",
		"tsup": "^6.7.0",
		"typescript": "^5.1.6",
		"vite": "^4.4.9",
		"vitest": "^0.34.1"
	},
	"svelte": "./dist/web/index.js",
	"types": "./dist/web/index.d.ts",
	"type": "module"
}
